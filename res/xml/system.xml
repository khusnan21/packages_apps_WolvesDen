<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/system_category"
    android:layout="@layout/tab"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">
        
    <Preference
        android:key="powermenu"
        android:fragment="com.gzr.wolvesden.fragments.PowerMenu"
        android:title="@string/powermenu_title" />

    <Preference
        android:key="screenoff"
        android:fragment="com.gzr.wolvesden.fragments.ScreenOffAnimations"
        android:title="@string/screen_off_category_title" />

    <com.gzr.wolvesden.preference.SystemSettingSwitchPreference
        android:key="toast_icon"
        android:title="@string/toast_icon_title"
        android:summary="@string/toast_icon_summary"
        android:defaultValue="true" />
  
        <!-- Advanced Controls -->
   	<Preference
       	android:key="advanced_controls"
       	android:persistent="false"
       	android:title="@string/advanced_controls_title">
    <intent android:action="android.intent.action.MAIN"
        android:targetPackage="com.thht.settings.device"
        android:targetClass="com.thht.settings.device.DeviceSettings"/>
   	</Preference>
  
</PreferenceScreen>
